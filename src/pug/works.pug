			+pagination
	section.skn-form__section
		.container 
			h2.skn-form__title Узнай о ремонте СКН
			form.skn-form.js_validation__form
				p.skn-form__text Оставьте вашу заявку здесь и мы ответим на все ваши вопросы!
				.fields
					.inputs__wrap
						label.js_validation_item
							span.text.js_usual_text Телефон
							span.js_error Введите телефон
							input.field.js_phone-mask.js_validation_object(type='text' placeholder='Ваш телефон')
						label.js_validation_item
							span.text.js_usual_text Имя
							span.js_error Введите имя
							input.field.js_validation_object(type='text' placeholder='Ваше имя')
					label.js_validation_item
						span.text.js_usual_text Напишите свой вопрос здесь
						span.js_error Введите текст вопроса
						textarea.field.js_validation_object(type='text' placeholder='Ваше сообщение')
				button(type='submit').submit ОСТАВИТЬ ЗАЯВКУ
