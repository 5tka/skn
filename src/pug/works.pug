extends _layout.pug
include ./_includes/_layout/_pagination.pug
block main
	section.works-accent
		.works-accent__bg(style='background-image: url(img/work-page/accent_bg.png)')
		.container 
			.works-accent__block
				.works-accent__title Наши работы
				.works-accent__text 
					p С учетом Ваших требований и нашего опыта, мы предложим наиболее оптимальные технологии и материалы.
	section.works-section
		.container
			.nav-wrapper
				ul.gallery-list
					li.gallery-item(data-filter="all")
						a.gallery-link.gallery-link--active(href="javascript:void(0)") Все типы
					li.gallery-item(data-filter=".b")
						a.gallery-link(href="javascript:void(0)") комнатные помещения
					li.gallery-item(data-filter=".c")
						a.gallery-link(href="javascript:void(0)") жилые помещения
					li.gallery-item(data-filter=".d")
						a.gallery-link(href="javascript:void(0)") перепланировка
					li.gallery-item(data-filter=".e")
						a.gallery-link(href="javascript:void(0)") дизайн
					li.gallery-item(data-filter=".f")
						a.gallery-link(href="javascript:void(0)") отделочные работы

		.container
			.works_gallery-items
				-for (var x=0; x<3; x++)
					.works_gallery-item.mix.b
						.w_g-img
							img(src="img/works/w-1.jpg", alt="")
							.w_g-date
								span 25.01.2016
						.w_g-dscr
							span 
								| РЕМОНТ 3-Х КОМНАТНОЙ КВАРТИРЫ ПОД КЛЮЧ
							a(href="#")
								| смотреть
